<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.yuan.courseservice.dao.MessageDao">

    <resultMap type="com.yuan.courseservice.entity.Message" id="MessageMap">
        <result property="mesId" column="mes_id" jdbcType="INTEGER"/>
        <result property="couId" column="cou_id" jdbcType="INTEGER"/>
        <result property="mesTime" column="mes_time" jdbcType="TIMESTAMP"/>
        <result property="mesContent" column="mes_content" jdbcType="VARCHAR"/>
        <result property="mesAuther" column="mes_auther" jdbcType="INTEGER"/>
    </resultMap>

    <!-- 批量插入 -->
    <insert id="insertBatch" keyProperty="mesId" useGeneratedKeys="true">
        insert into bishe.message(cou_id, mes_time, mes_content, mes_auther)
        values
        <foreach collection="entities" item="entity" separator=",">
            (#{entity.couId}, #{entity.mesTime}, #{entity.mesContent}, #{entity.mesAuther})
        </foreach>
    </insert>
    <!-- 批量插入或按主键更新 -->
    <insert id="insertOrUpdateBatch" keyProperty="mesId" useGeneratedKeys="true">
        insert into bishe.message(cou_id, mes_time, mes_content, mes_auther)
        values
        <foreach collection="entities" item="entity" separator=",">
            (#{entity.couId}, #{entity.mesTime}, #{entity.mesContent}, #{entity.mesAuther})
        </foreach>
        on duplicate key update
        cou_id = values(cou_id) , mes_time = values(mes_time) , mes_content = values(mes_content) , mes_auther =
        values(mes_auther)
    </insert>

</mapper>

