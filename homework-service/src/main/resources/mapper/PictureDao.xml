<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.yuan.homeworkservice.dao.PictureDao">

    <resultMap type="com.yuan.homeworkservice.entity.Picture" id="PictureMap">
        <result property="picId" column="pic_id" jdbcType="INTEGER"/>
        <result property="stuHomId" column="stu_hom_id" jdbcType="INTEGER"/>
        <result property="picTime" column="pic_time" jdbcType="TIMESTAMP"/>
        <result property="picUrl" column="pic_url" jdbcType="VARCHAR"/>
        <result property="picType" column="pic_type" jdbcType="VARCHAR"/>
    </resultMap>

    <!-- 批量插入 -->
    <insert id="insertBatch" keyProperty="picId" useGeneratedKeys="true">
        insert into bishe.picture(stu_hom_id, pic_time, pic_url, pic_type)
        values
        <foreach collection="entities" item="entity" separator=",">
            (#{entity.stuHomId}, #{entity.picTime}, #{entity.picUrl}, #{entity.picType})
        </foreach>
    </insert>
    <!-- 批量插入或按主键更新 -->
    <insert id="insertOrUpdateBatch" keyProperty="picId" useGeneratedKeys="true">
        insert into bishe.picture(stu_hom_id, pic_time, pic_url, pic_type)
        values
        <foreach collection="entities" item="entity" separator=",">
            (#{entity.stuHomId}, #{entity.picTime}, #{entity.picUrl}, #{entity.picType})
        </foreach>
        on duplicate key update
        stu_hom_id = values(stu_hom_id) , pic_time = values(pic_time) , pic_url = values(pic_url) , pic_type =
        values(pic_type)
    </insert>

</mapper>

