<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.yuan.reviewservice.dao.AnswerDao">

    <resultMap type="com.yuan.reviewservice.entity.Answer" id="AnswerMap">
        <result property="ansId" column="ans_id" jdbcType="INTEGER"/>
        <result property="stuHomId" column="stu_hom_id" jdbcType="INTEGER"/>
        <result property="ansNum" column="ans_num" jdbcType="INTEGER"/>
        <result property="ansTxt" column="ans_txt" jdbcType="VARCHAR"/>
    </resultMap>

    <!-- 批量插入 -->
    <insert id="insertBatch" keyProperty="ansId" useGeneratedKeys="true">
        insert into bishe.answer(stu_hom_id, ans_num, ans_txt)
        values
        <foreach collection="entities" item="entity" separator=",">
            (#{entity.stuHomId}, #{entity.ansNum}, #{entity.ansTxt})
        </foreach>
    </insert>
    <!-- 批量插入或按主键更新 -->
    <insert id="insertOrUpdateBatch" keyProperty="ansId" useGeneratedKeys="true">
        insert into bishe.answer(stu_hom_id, ans_num, ans_txt)
        values
        <foreach collection="entities" item="entity" separator=",">
            (#{entity.stuHomId}, #{entity.ansNum}, #{entity.ansTxt})
        </foreach>
        on duplicate key update
        stu_hom_id = values(stu_hom_id) , ans_num = values(ans_num) , ans_txt = values(ans_txt)
    </insert>

</mapper>

